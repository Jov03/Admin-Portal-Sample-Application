<% include ./partials/header%>
<% include ./partials/navbar%>

<form class="container CreateCompany" action="/Company/new" method="POST">
    <h2 class="text-center">Create Company</h2>
    <div class="form-group">
        <label for="companyName">Company Name</label>
        <input class="form-control" name="Company[CompanyName]" id="companyName" type="text" required>
    </div>
  
    <div class="form-group">
        <label for="address">Address</label>
        <input class="form-control" name="Company[Address]" id="address" type="text" required>
    </div>
    <div class="form-group">
        <label for="createdBy">Created By</label>
        <input class="form-control" name="Company[CreatedBy]" id="createdBy" type="tel" value="<%=currentUser.username%>" readonly>
    </div>
    

    


    <button class="btn btn-lg btn-primary btn-block">Add</button>
</form>




<% include ./partials/footer%>